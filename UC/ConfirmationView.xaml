<UserControl x:Class="Stand4.UC.ConfirmationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stand4.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="{Binding Message}" FontSize="24" Margin="20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ТАК" Command="{Binding YesCommand}" 
                        Width="100" Height="40" Margin="10" Background="Green" Foreground="White"/>

                <Button Content="НІ" Command="{Binding NoCommand}" 
                        Width="100" Height="40" Margin="10" Background="Red" Foreground="White"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
